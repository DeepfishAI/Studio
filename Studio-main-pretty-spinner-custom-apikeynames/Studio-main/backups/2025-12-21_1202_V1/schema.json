{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "DeepFish Universal Project State",
    "description": "Strict schema for all DeepFish autonomous projects.",
    "properties": {
        "projectId": {
            "type": "string"
        },
        "goal": {
            "type": "string",
            "description": "The ultimate objective of this project"
        },
        "status": {
            "type": "string",
            "enum": [
                "active",
                "paused",
                "complete",
                "failed",
                "human_intervention_required"
            ]
        },
        "phase": {
            "type": "string",
            "enum": [
                "planning",
                "production",
                "review",
                "revision",
                "final_qa"
            ]
        },
        "metrics": {
            "type": "object",
            "properties": {
                "qualityScore": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "iterationCount": {
                    "type": "integer",
                    "minimum": 0
                },
                "maxIterations": {
                    "type": "integer",
                    "default": 5
                }
            },
            "required": [
                "qualityScore",
                "iterationCount"
            ]
        },
        "history": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "agent": {
                        "type": "string"
                    },
                    "action": {
                        "type": "string"
                    },
                    "outputSummary": {
                        "type": "string"
                    },
                    "score": {
                        "type": "integer"
                    },
                    "feedback": {
                        "type": "string"
                    }
                },
                "required": [
                    "agent",
                    "action"
                ]
            }
        },
        "artifacts": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            },
            "description": "Map of artifact names to file paths (absolute or workspace-relative)"
        }
    },
    "required": [
        "projectId",
        "goal",
        "status",
        "phase",
        "metrics",
        "history"
    ]
}