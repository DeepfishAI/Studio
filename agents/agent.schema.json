{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "schemaVersion": {
            "type": "string"
        },
        "identity": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "tagline": {
                    "type": "string"
                },
                "department": {
                    "type": "string"
                },
                "isCore": {
                    "type": "boolean"
                },
                "avatar": {
                    "type": "string",
                    "description": "Path to 500x500 portrait in public/portraits"
                }
            },
            "required": [
                "id",
                "name"
            ]
        },
        "skills": {
            "type": "object"
        },
        "models": {
            "type": "object",
            "properties": {
                "best": {
                    "$ref": "#/definitions/modelConfig"
                },
                "better": {
                    "$ref": "#/definitions/modelConfig"
                },
                "good": {
                    "$ref": "#/definitions/modelConfig"
                }
            }
        },
        "model": {
            "$ref": "#/definitions/modelConfig"
        },
        "tools": {
            "type": "object"
        },
        "bus": {
            "type": "object"
        },
        "dependencies": {
            "type": "object"
        },
        "skins": {
            "type": "object"
        },
        "prompt": {
            "type": "object"
        }
    },
    "identity",
    "prompt"
],
"definitions": {
    "modelConfig": {
        "type": "object",
        "properties": {
            "provider": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "maxTokens": {
                "type": "integer"
            },
            "temperature": {
                "type": "number"
            },
            "systemPromptOverlay": {
                "type": "string"
            }
        },
        "required": [
            "provider",
            "name"
        ]
    }
}
}