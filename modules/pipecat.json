{
    "$comment": "=== PIPECAT VOICE MODULE — Real-Time Conversational AI ===",
    "$description": "Enables real-time voice conversations using Pipecat orchestration and NVIDIA Riva",
    "$why_needed": [
        "Low-latency voice interaction for Vesper",
        "Orchestration of ASR, LLM, and TTS",
        "Support for interruptions and turn-taking",
        "Enterprise-grade speech synthesis"
    ],
    "module_id": "pipecat",
    "type": "feature",
    "cost": "PREMIUM",
    "available_tiers": [
        "premium",
        "platinum"
    ],
    "config": {
        "transport": "daily",
        "vad": {
            "enabled": true,
            "provider": "silero",
            "threshold": 0.5
        },
        "asr": {
            "provider": "nvidia",
            "model": "nvidia/parakeet-ctc-1.1b-asr",
            "language": "en-US"
        },
        "tts": {
            "provider": "nvidia",
            "model": "nvidia/magpie-tts-multilingual",
            "voice": "English-US-Female-1"
        },
        "llm_connector": "openai-compatible"
    },
    "$diagram": [
        "    ┌──────────┐      ┌──────────┐      ┌──────────┐",
        "    │   USER   │ <--> │  WebRTC  │ <--> │ Pipecat  │",
        "    └──────────┘      │  (Daily) │      │Orchestrator│",
        "                      └──────────┘      └────┬─────┘",
        "                                             │",
        "         ┌───────────────────────────────────┼──────────────────────────────────┐",
        "         ▼                                   ▼                                  ▼",
        "    ┌──────────┐                        ┌──────────┐                       ┌──────────┐",
        "    │   ASR    │                        │   LLM    │                       │   TTS    │",
        "    │ (NVIDIA) │ ─────────────────────> │ (Llama)  │ ────────────────────> │ (NVIDIA) │",
        "    └──────────┘                        └──────────┘                       └──────────┘"
    ]
}