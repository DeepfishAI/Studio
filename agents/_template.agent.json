{
    "$schema": "./agent.schema.json",
    "schemaVersion": "2.0",
    "identity": {
        "id": "_template",
        "name": "New Agent",
        "title": "Role Title",
        "tagline": "A brief description of purpose",
        "avatar": "/avatars/default.png"
    },
    "role": "worker",
    "busConfig": {
        "canEmit": [
            "TASK_COMPLETE",
            "BLOCKER",
            "REQUEST_REVIEW"
